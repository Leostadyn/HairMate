<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#cecece"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_125">
            <TextView
                android:textColor="#fff"
                android:text="我的主页"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="#cecece"/>
        </LinearLayout>

        <RelativeLayout
            android:background="@drawable/shape_corner"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_100">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_40"
                android:id="@+id/personal_img"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/a_m"
                android:layout_marginTop="@dimen/dp_15" />

            <TextView
                android:id="@+id/loginTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@+id/personal_img"
                android:layout_toRightOf="@+id/personal_img"
                android:text="未登录"
                android:textColor="#000"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#cecece"/>
    <TextView
        android:layout_margin="@dimen/dp_5"
        android:textColor="#000"
        android:background="@drawable/shape_corner3"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:textSize="20sp"
        android:text="HairMate交流群"/>
    <TextView
        android:id="@+id/commentTxt"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/shape_corner3"
        android:textColor="#000"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:textSize="20sp"
        android:text="意见反馈"/>
    <TextView
        android:id="@+id/settingsTxt"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/shape_corner3"
        android:textColor="#000"
        android:paddingLeft="@dimen/dp_20"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:textSize="20sp"
        android:text="设置"/>
    


</LinearLayout>