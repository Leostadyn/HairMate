<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#cecece"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintBottom_toTopOf="@id/self"
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="个人中心"
        android:gravity="center"
        android:background="#a06539"
        android:textColor="#fff"/>

    <RelativeLayout
        android:id="@+id/self"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#a06539">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="13dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nickname_tag"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/personal_img"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="-7dp"
            android:layout_toRightOf="@+id/personal_img"
            android:background="#a06539"
            android:singleLine="false"
            android:textColor="#fff" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/btns1"
        app:layout_constraintTop_toBottomOf="@id/self"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/order"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="#fff"
            android:textColor="#757575"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/his"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="#fff"
            android:textColor="#757575"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/fav"
            android:textColor="#757575"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="#fff"/>
    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/btns1"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

    <LinearLayout
        android:id="@+id/btns2"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <Button
            android:text="搜索"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="菜单"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="分类"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="积分"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns3"
        app:layout_constraintTop_toBottomOf="@id/btns2"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <Button
            android:text="信息"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="折扣"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="地址"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="优惠"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/btns3"
        android:id="@+id/btns4"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <Button
            android:text="客服"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="问题"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="评价"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="设置"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>