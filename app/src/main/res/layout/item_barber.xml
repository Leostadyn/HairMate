<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/shape_corner2"
    android:paddingTop="@dimen/dp_2"
    android:layout_margin="@dimen/dp_5"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_178">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_barber_img"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_25" />

    <TextView
        android:id="@+id/item_barber_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:text="000"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_toEndOf="@+id/item_barber_img"
        android:layout_toRightOf="@+id/item_barber_img" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ECDAC1"
        android:minWidth="@dimen/dp_10"
        android:minHeight="@dimen/dp_10"
        android:text="免费咨询" />

    <TextView
        android:id="@+id/item_barber_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_barber_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/item_barber_img"
        android:layout_toRightOf="@+id/item_barber_img"
        android:text="0000000"
        android:textColor="#000" />

    <TextView
        android:id="@+id/item_barber_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_barber_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:text="00000000000000"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/item_barber_trial"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_6"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/item_barber_tag"
        android:background="@drawable/shape_corner3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发型设计"
            android:gravity="center"
            android:textColor="#000" />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="￥999"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/item_barber_money1"
            />
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下单"
            android:textColor="@color/colorPrimary"
            android:background="@color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_barber_analysis"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_6"
        android:layout_below="@+id/item_barber_trial"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/shape_corner3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="脸型分析"
            android:gravity="center"
            android:textColor="#000" />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="￥999"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/item_barber_money2"
            />
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下单"
            android:textColor="@color/colorPrimary"
            android:background="@color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_barber_design"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_6"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/item_barber_analysis"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/shape_corner3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="形象设计"
            android:gravity="center"
            android:textColor="#000" />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="￥999"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/item_barber_money3"
            />
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下单"
            android:textColor="@color/colorPrimary"
            android:background="@color/transparent"/>
    </LinearLayout>

</RelativeLayout>